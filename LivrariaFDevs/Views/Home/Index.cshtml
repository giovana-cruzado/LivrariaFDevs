@{
    ViewData["Title"] = "LivrariaFDevs";
}

<div class="row align-items-center gy-4">
    <div class="col-12 col-md-7">
        <h1 class="display-5 fw-bold">LivrariaFDevs</h1>
        <p class="lead text-muted">Um sistema simples para gerenciar livros — crie, liste e organize sua coleção.</p>

        <div class="d-flex gap-2 flex-wrap">
            <a asp-controller="Livros" asp-action="Index" class="btn btn-primary btn-lg">📚 Ver Livros</a>
            <a asp-controller="Livros" asp-action="Create" class="btn btn-outline-primary btn-lg">➕ Cadastrar Livro</a>
        </div>
    </div>

    <div class="col-12 col-md-5 d-flex justify-content-md-end">
        <div class="card shadow-sm" style="width: 260px;">
            <div class="card-body text-center py-4">
                <svg width="60" height="60" viewBox="0 0 24 24" fill="none" class="mb-3">
                    <rect x="3" y="4" width="14" height="14" stroke="#0d6efd" stroke-width="1.5" rx="1" />
                    <rect x="7" y="7" width="8" height="2" fill="#0d6efd" />
                </svg>
                <h5 class="mb-0">Bem-vinda(o) à LivrariaFDevs</h5>
                <p class="small text-muted mt-2">Comece adicionando seu primeiro livro.</p>
            </div>
        </div>
    </div>
</div>
